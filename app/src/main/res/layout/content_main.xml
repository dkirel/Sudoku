<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:textSize="15sp"
        android:text="Pick a the difficulty for your game"
        />

    <Button style="@style/DifficultyButton"
        android:id="@+id/button_EASY"
        android:text="Easy" />

    <Button style="@style/DifficultyButton"
        android:id="@+id/button_MEDIUM"
        android:text="Medium" />

    <Button style="@style/DifficultyButton"
        android:id="@+id/button_HARD"
        android:text="Hard" />

    <Button style="@style/DifficultyButton"
        android:id="@+id/button_EXPERT"
        android:text="Expert" />

    <TextView
        android:id="@+id/error_message"
        android:text="An error occurred... please try again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15sp"
        android:paddingBottom="15sp"
        android:paddingRight="15sp"
        android:paddingTop="30sp"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:visibility="gone"
        />
</LinearLayout>
