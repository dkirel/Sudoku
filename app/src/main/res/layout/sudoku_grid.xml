<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingTop="20sp"
    android:paddingBottom="10sp"
    android:orientation="vertical"
    android:weightSum="100"
    tools:showIn="@layout/activity_game">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5sp">

        <ImageButton style="@style/NumberButton"
            android:id="@+id/back_button"
            android:src="@drawable/back_button"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:maxWidth="70sp"
            android:maxHeight="70sp"
            android:onClick="initMainActivity"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="@string/app_name"/>

    </FrameLayout>

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sudoku_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="18"
        android:numColumns="9"
        android:verticalSpacing="2sp"
        android:horizontalSpacing="2sp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginBottom="15sp"
        android:padding="0sp"
        android:background="@color/darkBrown"
        >
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="78"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_1"
            android:layout_weight="10"
            android:text="1" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_2"
            android:layout_weight="10"
            android:text="2" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_3"
            android:layout_weight="10"
            android:text="3" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_4"
            android:layout_weight="10"
            android:text="4" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_5"
            android:layout_weight="10"
            android:text="5" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_6"
            android:layout_weight="10"
            android:text="6" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_7"
            android:layout_weight="10"
            android:text="7" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_8"
            android:layout_weight="10"
            android:text="8" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_9"
            android:layout_weight="10"
            android:text="9" />

        <Button style="@style/NumberButton"
            android:id="@+id/number_button_10"
            android:layout_weight="10"
                android:text="10" />

    </LinearLayout>



</LinearLayout>